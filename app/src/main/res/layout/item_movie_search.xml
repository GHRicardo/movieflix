<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_movie_search_height"
    android:layout_marginStart="@dimen/item_movie_search_margin_se"
    android:layout_marginEnd="@dimen/item_movie_search_margin_se"
    android:layout_marginBottom="@dimen/item_movie_search_margin_tb"
    android:layout_marginTop="@dimen/item_movie_search_margin_tb"
    app:cardCornerRadius="@dimen/item_movie_corners_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/item_movie_content_description"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_movie_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_movie_search_text_height"
            android:layout_alignParentBottom="true"
            android:paddingStart="@dimen/item_movie_title_margin_se"
            android:paddingEnd="@dimen/item_movie_title_margin_se"
            android:background="@color/toolbar_color"
            android:textColor="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center"
            android:textSize="@dimen/item_movie_search_textsize" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>